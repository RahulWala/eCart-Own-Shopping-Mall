extends base

block content
	.mt-2
	for pro in proInfo
		.row
			.col-lg-12.col-md-12
				.card
					.card-header.text-center
						p #{pro.proName}
					.card-block
						.card-text
							.row
								.col-lg-6.col-md-6.col-sm-12
									p Category : &nbsp;#{pro.category}
									p Model&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;#{pro.model}
								.col-lg-6.col-md-6.col-sm-12
									p Product Seller : &nbsp;#{pro.seller}
									p Price &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;#{pro.price}/-
								.col-lg-12.col-md-12.col-sm-12
									p Product Description : 
									br 
									p #{pro.comment}
					.card-footer
						button.btn.btn-primary
							a(href='/users/addCart/#{pro._id}') Add To Cart